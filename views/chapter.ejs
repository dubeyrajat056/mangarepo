<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= chapter.title %> - <%= chapter.mangaTitle %> - Manga Reader</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a href="/" class="logo">MangaReader</a>
            <div class="search-container">
                <form action="/search" method="get">
                    <input type="text" name="q" placeholder="Search manga...">
                    <button type="submit"><i class="fas fa-search"></i></button>
                </form>
            </div>
            <div class="nav-links">
                <a href="/"><i class="fas fa-home"></i> Home</a>
                <a href="#"><i class="fas fa-bookmark"></i> Bookmarks</a>
                <a href="#"><i class="fas fa-cog"></i> Settings</a>
            </div>
        </div>
    </nav>
    
    <main class="chapter-viewer">
        <div class="container">
            <div class="chapter-header">
                <h1><%= chapter.mangaTitle %></h1>
                <h2><%= chapter.title %></h2>
            </div>
            
            <div class="chapter-controls">
                <button id="prev-page"><i class="fas fa-arrow-left"></i> Previous</button>
                <span id="page-indicator">Page 1 of <%= chapter.pages.length %></span>
                <button id="next-page">Next <i class="fas fa-arrow-right"></i></button>
            </div>
            
            <div class="page-container">
                <% chapter.pages.forEach(page => { %>
                    <div class="page" data-page="<%= page.number %>" style="display: none;">
                        <img src="<%= page.url %>" alt="Page <%= page.number %>">
                    </div>
                <% }); %>
            </div>
        </div>
    </main>
    
    <footer class="footer">
        <div class="container">
            <div class="footer-section">
                <h3>MangaReader</h3>
                <p>Your ultimate manga reading experience</p>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="#">Popular</a></li>
                    <li><a href="#">Latest</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Legal</h3>
                <ul>
                    <li><a href="#">Terms of Service</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                </ul>
            </div>
        </div>
        <div class="copyright">
            <p>&copy; 2023 MangaReader. All rights reserved.</p>
        </div>
    </footer>
    
    <script src="/js/main.js"></script>
</body>
</html>